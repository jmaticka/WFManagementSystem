@using System.Activities.Statements
@using WFManagementSystem.ViewModels
@{
    ViewBag.Title = "Home Page";
    var testData = (List<ProcessStepViewModel>)ViewBag.testData;
}

<div class="container">
    <div class="col-lg-12">
        <h1>Kroky ke schválení</h1>
        <p>@ViewBag.Message</p>
        <table class="table table-responsive table-hover">
            <thead>
                <tr>
                    <th>Nazev</th>
                    <th>Datum</th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var process in testData)
            {

                <tr>
                    <td>@process.Name</td>
                    <td>@process.StartedDate.Date</td>
                    <td>
                        <span class="btn btn-primary btn-sm">
                            @Html.ActionLink("Vykonat akci", "PerformAction", "Home", routeValues: new {id = @process.Id}, htmlAttributes: null)
                        </span>
                    </td>
                </tr>
            }



        </table>
    </div>
</div>

