<div class="col-sm-3 col-lg-2">
    <div class="navbar navbar-default navbar-fixed-side">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Workflow Management System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @if (Request.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">

                        <li>@Html.ActionLink("Akce ke schválení", "Index", "Home")</li>
                        
                        @if (User.IsInRole("Admin") || User.IsInRole("Garant"))
                        {
                            <li>@Html.ActionLink("Workflow", "Index", "ManageWorkflows")</li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Správa uživatelů", "Index", "ManageUsers")</li>
                        }
                        
                    </ul>
                }
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
</div>

