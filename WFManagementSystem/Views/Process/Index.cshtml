

@{
    ViewBag.Title = "Správa procesů workflow";
    var WorkflowInstances = (IEnumerable<WFMDatabase.Entities.WorkflowInstance>)ViewBag.WorkflowInstances;
}

<h2>Správa procesů Workflow</h2>

<p>
    @Html.ActionLink("Vytvoř nový proces", "CreateProcess","Process", htmlAttributes: new { @class = "btn btn-primary btn-sm" })
</p>
<table class="table">
    <tr>
        <th>
            Název Workflow
        </th>
        <th>
            Datum vytvoření
        </th>
        @if (User.IsInRole("admin"))
            {
            <th>
                Autor
            </th>
        }

        <th></th>
    </tr>

    @foreach (var item in WorkflowInstances)
    {
        <tr>
            <td>
                @item.Workflow.Name
            </td>
            <td>
                @item.DateTimeStarted
            </td>
            @if (User.IsInRole("admin"))
                {
                <td>
                    @item.UserStarted.UserName
                </td>
            }
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>


